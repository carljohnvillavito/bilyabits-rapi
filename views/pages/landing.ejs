<%- include('../partials/head') %>

<div id="skeletonLoader" class="fixed inset-0 z-[100] bg-[#0a0f1a] flex flex-col items-center justify-center transition-opacity duration-500">
  <div class="w-full max-w-3xl px-6 text-center">
    <div class="mb-10">
      <div class="h-6 w-32 mx-auto rounded-full bg-white/10 animate-pulse mb-6"></div>
      <div class="h-12 w-3/4 mx-auto rounded-xl bg-white/10 animate-pulse mb-4"></div>
      <div class="h-12 w-1/2 mx-auto rounded-xl bg-white/10 animate-pulse mb-6"></div>
      <div class="h-4 w-2/3 mx-auto rounded bg-white/10 animate-pulse mb-3"></div>
      <div class="h-4 w-1/2 mx-auto rounded bg-white/10 animate-pulse mb-8"></div>
      <div class="flex gap-4 justify-center">
        <div class="h-12 w-40 rounded-xl bg-white/10 animate-pulse"></div>
        <div class="h-12 w-36 rounded-xl bg-white/10 animate-pulse"></div>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-12">
      <div class="glass rounded-2xl p-6"><div class="h-10 w-10 rounded-xl bg-white/10 animate-pulse mb-4"></div><div class="h-4 w-24 rounded bg-white/10 animate-pulse mb-2"></div><div class="h-3 w-full rounded bg-white/10 animate-pulse"></div></div>
      <div class="glass rounded-2xl p-6"><div class="h-10 w-10 rounded-xl bg-white/10 animate-pulse mb-4"></div><div class="h-4 w-24 rounded bg-white/10 animate-pulse mb-2"></div><div class="h-3 w-full rounded bg-white/10 animate-pulse"></div></div>
      <div class="glass rounded-2xl p-6"><div class="h-10 w-10 rounded-xl bg-white/10 animate-pulse mb-4"></div><div class="h-4 w-24 rounded bg-white/10 animate-pulse mb-2"></div><div class="h-3 w-full rounded bg-white/10 animate-pulse"></div></div>
    </div>
  </div>
</div>
<script>window.addEventListener('load',()=>{const s=document.getElementById('skeletonLoader');s.style.opacity='0';setTimeout(()=>s.style.display='none',500)});</script>

<%- include('../partials/header') %>

<main class="flex-1">
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-primary/20 to-transparent"></div>
    <div class="absolute top-20 left-10 w-72 h-72 bg-secondary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 right-10 w-96 h-96 bg-accent/10 rounded-full blur-3xl"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
      <div class="text-center max-w-3xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 glass rounded-full mb-6">
          <span class="pulse-dot w-2 h-2 bg-secondary rounded-full"></span>
          <span class="text-xs text-gray-300">v<%= config.version %> &mdash; Open Source</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-6">
          Build APIs with
          <span class="gradient-text">BILYABITS-RAPI</span>
        </h1>
        <p class="text-gray-400 text-lg md:text-xl mb-8 leading-relaxed">
          A powerful, open-source REST API platform. Create, test, and deploy API tools with a modular command-based architecture.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/register" class="px-8 py-3 bg-secondary text-primary font-bold rounded-xl hover:bg-secondary/80 transition transform hover:scale-105">
            Get Started Free
          </a>
          <a href="<%= config.socials['repo-loc'] %>" target="_blank" class="px-8 py-3 glass rounded-xl text-gray-300 hover:text-white transition flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            View Source
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="glass rounded-2xl p-6 hover:border-secondary/30 transition">
        <div class="w-12 h-12 bg-secondary/20 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
        </div>
        <h3 class="font-bold text-lg mb-2">Lightning Fast</h3>
        <p class="text-gray-400 text-sm">Modular command-based API system loads instantly. Monitor latency in real-time.</p>
      </div>
      <div class="glass rounded-2xl p-6 hover:border-secondary/30 transition">
        <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
        </div>
        <h3 class="font-bold text-lg mb-2">Secure by Design</h3>
        <p class="text-gray-400 text-sm">API key authentication, rate limiting, and hashed passwords keep your data safe.</p>
      </div>
      <div class="glass rounded-2xl p-6 hover:border-secondary/30 transition">
        <div class="w-12 h-12 bg-primary/40 rounded-xl flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-light" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/></svg>
        </div>
        <h3 class="font-bold text-lg mb-2">Developer Friendly</h3>
        <p class="text-gray-400 text-sm">Add API tools with a simple config file. Auto-routes, auto-docs, and built-in tester.</p>
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Platform <span class="gradient-text">Statistics</span></h2>
      <p class="text-gray-400">Real-time overview of the platform</p>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="glass rounded-2xl p-6 text-center">
        <p class="text-2xl md:text-3xl font-bold text-secondary"><%= stats.totalAPIs %></p>
        <p class="text-gray-400 text-sm mt-1">Total APIs</p>
      </div>
      <div class="glass rounded-2xl p-6 text-center">
        <p class="text-2xl md:text-3xl font-bold text-accent"><%= stats.totalCalls %></p>
        <p class="text-gray-400 text-sm mt-1">API Calls</p>
      </div>
      <div class="glass rounded-2xl p-6 text-center">
        <p class="text-2xl md:text-3xl font-bold text-light"><%= stats.totalUsers %></p>
        <p class="text-gray-400 text-sm mt-1">Users</p>
      </div>
      <div class="glass rounded-2xl p-6 text-center">
        <p class="text-2xl md:text-3xl font-bold text-red-400"><%= stats.deadAPIs %></p>
        <p class="text-gray-400 text-sm mt-1">Dead APIs</p>
      </div>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>
