<%- include('../partials/head') %>
<%- include('../partials/header') %>

<main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold">Dashboard</h1>
      <p class="text-gray-400 text-sm mt-1">Welcome, <span class="text-secondary"><%= dashUser.username %></span></p>
    </div>
    <div class="mt-4 sm:mt-0">
      <span class="text-xs text-gray-500">Member since <%= new Date(dashUser.created_at).toLocaleDateString() %></span>
    </div>
  </div>

  <div class="glass rounded-2xl p-4 md:p-6 mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <p class="text-xs text-gray-400 mb-1">Your API Key</p>
        <div class="flex items-center gap-2">
          <code id="apiKeyDisplay" class="text-secondary font-mono text-sm bg-white/5 px-3 py-2 rounded-lg"><%= dashUser.api_key %></code>
          <button onclick="copyApiKey()" class="p-2 hover:bg-white/10 rounded-lg transition" title="Copy">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/></svg>
          </button>
        </div>
      </div>
      <form method="POST" action="/user/<%= dashUser.username %>/regenerate-key" class="flex-shrink-0">
        <button type="submit" class="px-4 py-2 bg-accent/20 text-accent rounded-lg text-sm hover:bg-accent/30 transition">
          Regenerate Key
        </button>
      </form>
    </div>
  </div>

  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Total APIs</p>
      <p class="text-2xl font-bold text-secondary"><%= stats.totalAPIs %></p>
    </div>
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Your API Calls</p>
      <p class="text-2xl font-bold text-accent"><%= dashUser.api_calls %></p>
    </div>
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Dead APIs</p>
      <p class="text-2xl font-bold text-red-400"><%= stats.deadAPIs %></p>
    </div>
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Server Latency</p>
      <p class="text-2xl font-bold text-light" id="latencyDisplay">--</p>
    </div>
  </div>

  <div class="glass rounded-2xl p-4 md:p-6 mb-8">
    <h2 class="text-lg font-bold mb-4">API Overview</h2>
    <% if (apis.length === 0) { %>
      <p class="text-gray-400 text-sm">No API tools are loaded yet.</p>
    <% } else { %>
      <div class="space-y-4">
        <% apis.forEach(function(api) { %>
          <div class="bg-white/5 rounded-xl p-4 border border-white/5 hover:border-secondary/20 transition">
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-1">
                  <h3 class="font-semibold text-sm"><%= api.name %></h3>
                  <span class="px-2 py-0.5 bg-secondary/20 text-secondary rounded-full text-xs"><%= api.category %></span>
                  <% if (api.requireKey) { %>
                    <span class="px-2 py-0.5 bg-accent/20 text-accent rounded-full text-xs">Key Required</span>
                  <% } else { %>
                    <span class="px-2 py-0.5 bg-green-500/20 text-green-400 rounded-full text-xs">Free</span>
                  <% } %>
                </div>
                <p class="text-gray-400 text-xs mb-2"><%= api.description %></p>
                <div class="flex items-center gap-2">
                  <code class="text-xs text-gray-300 bg-white/5 px-2 py-1 rounded font-mono">/<%= api.category.toLowerCase() %><%= api.route.toLowerCase() %></code>
                  <button onclick="copyText('/<%= api.category.toLowerCase() %><%= api.route.toLowerCase() %>')" class="text-gray-500 hover:text-secondary transition">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <div class="glass rounded-2xl p-4 md:p-6">
    <h2 class="text-lg font-bold mb-4">API Call Tester</h2>
    <div class="space-y-4">
      <div>
        <label class="block text-xs text-gray-400 mb-1">Select API</label>
        <select id="apiSelect" onchange="onApiSelect()"
          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:outline-none focus:border-secondary transition">
          <option value="">-- Select an API --</option>
          <% apis.forEach(function(api, i) { %>
            <option value="<%= i %>" data-params='<%= JSON.stringify(api.params) %>' data-route="/<%= api.category.toLowerCase() %><%= api.route.toLowerCase() %>" data-requirekey="<%= api.requireKey %>"><%= api.name %> (<%= api.category %>)</option>
          <% }); %>
        </select>
      </div>

      <div id="paramFields" class="space-y-3"></div>

      <div class="flex flex-col sm:flex-row gap-3">
        <button onclick="testApi()" class="flex-1 py-3 bg-secondary text-primary font-bold rounded-xl hover:bg-secondary/80 transition">
          Test API
        </button>
      </div>

      <div id="resultSection" class="hidden">
        <div class="flex items-center justify-between mb-2">
          <p class="text-xs text-gray-400">Result</p>
          <div class="flex items-center gap-2">
            <span id="responseTime" class="text-xs text-gray-500"></span>
            <span id="responseStatus" class="text-xs px-2 py-0.5 rounded-full"></span>
          </div>
        </div>
        <pre id="resultOutput" class="bg-black/50 rounded-xl p-4 text-sm font-mono text-gray-300 overflow-x-auto max-h-80 whitespace-pre-wrap"></pre>
      </div>
    </div>
  </div>
</main>

<script>
  const apisData = <%- JSON.stringify(apis) %>;

  function copyApiKey() {
    const key = document.getElementById('apiKeyDisplay').textContent;
    navigator.clipboard.writeText(key);
  }

  function copyText(text) {
    navigator.clipboard.writeText(window.location.origin + text);
  }

  function onApiSelect() {
    const sel = document.getElementById('apiSelect');
    const opt = sel.options[sel.selectedIndex];
    const container = document.getElementById('paramFields');
    container.innerHTML = '';

    if (!opt.value) return;

    const params = JSON.parse(opt.dataset.params || '{}');
    const requireKey = opt.dataset.requirekey === 'true';

    for (const key of Object.keys(params)) {
      const cleanKey = key.replace('=', '');
      const div = document.createElement('div');
      div.innerHTML = `
        <label class="block text-xs text-gray-400 mb-1">${cleanKey}</label>
        <input type="text" id="param_${cleanKey}" placeholder="Enter ${cleanKey}"
          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-secondary transition">
      `;
      container.appendChild(div);
    }

    if (requireKey) {
      const div = document.createElement('div');
      div.innerHTML = `
        <label class="block text-xs text-gray-400 mb-1">API Key</label>
        <input type="text" id="param_apikey" value="<%= dashUser.api_key %>"
          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-secondary transition">
      `;
      container.appendChild(div);
    }
  }

  async function testApi() {
    const sel = document.getElementById('apiSelect');
    const opt = sel.options[sel.selectedIndex];
    if (!opt.value) return;

    const route = opt.dataset.route;
    const params = JSON.parse(opt.dataset.params || '{}');
    const requireKey = opt.dataset.requirekey === 'true';
    const queryParts = [];

    for (const key of Object.keys(params)) {
      const cleanKey = key.replace('=', '');
      const val = document.getElementById('param_' + cleanKey)?.value;
      if (val) queryParts.push(`${cleanKey}=${encodeURIComponent(val)}`);
    }

    if (requireKey) {
      const apikey = document.getElementById('param_apikey')?.value;
      if (apikey) queryParts.push(`apikey=${encodeURIComponent(apikey)}`);
    }

    const url = route + (queryParts.length ? '?' + queryParts.join('&') : '');
    const section = document.getElementById('resultSection');
    const output = document.getElementById('resultOutput');
    const timeEl = document.getElementById('responseTime');
    const statusEl = document.getElementById('responseStatus');

    section.classList.remove('hidden');
    output.textContent = 'Loading...';

    const start = performance.now();
    try {
      const resp = await fetch(url);
      const elapsed = Math.round(performance.now() - start);
      const data = await resp.json();
      output.textContent = JSON.stringify(data, null, 2);
      timeEl.textContent = elapsed + 'ms';
      statusEl.textContent = resp.status;
      statusEl.className = 'text-xs px-2 py-0.5 rounded-full ' + (resp.ok ? 'bg-green-500/20 text-green-400' : 'bg-red-500/20 text-red-400');
    } catch (err) {
      const elapsed = Math.round(performance.now() - start);
      output.textContent = 'Error: ' + err.message;
      timeEl.textContent = elapsed + 'ms';
      statusEl.textContent = 'ERR';
      statusEl.className = 'text-xs px-2 py-0.5 rounded-full bg-red-500/20 text-red-400';
    }
  }

  function measureLatency() {
    const start = performance.now();
    fetch('/api/ping').then(() => {
      const ms = Math.round(performance.now() - start);
      document.getElementById('latencyDisplay').textContent = ms + 'ms';
    }).catch(() => {
      document.getElementById('latencyDisplay').textContent = '--';
    });
  }
  measureLatency();
  setInterval(measureLatency, 5000);
</script>

<%- include('../partials/footer') %>
