<%- include('../partials/head') %>

<div class="min-h-screen flex items-center justify-center px-4 relative">
  <div class="absolute inset-0 bg-gradient-to-br from-red-900/10 via-transparent to-primary/10"></div>

  <div class="relative w-full max-w-md">
    <div class="text-center mb-8">
      <div class="w-14 h-14 mx-auto bg-red-500/20 rounded-xl flex items-center justify-center mb-4">
        <svg class="w-7 h-7 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
      </div>
      <h1 class="text-2xl font-bold mb-1">Admin Access</h1>
      <p class="text-gray-400 text-sm">Restricted area</p>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-4 p-3 bg-red-500/20 border border-red-500/30 rounded-xl text-red-400 text-sm text-center"><%= error %></div>
    <% } %>

    <form method="POST" action="/korekong/admin/login" class="glass rounded-2xl p-6 space-y-4">
      <div>
        <label class="block text-sm text-gray-400 mb-1">Username</label>
        <input type="text" name="username" required autocomplete="off"
          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-red-400 transition"
          placeholder="Admin username">
      </div>
      <div>
        <label class="block text-sm text-gray-400 mb-1">Password</label>
        <input type="password" name="password" required autocomplete="off"
          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-red-400 transition"
          placeholder="Admin password">
      </div>
      <button type="submit" class="w-full py-3 bg-red-500 text-white font-bold rounded-xl hover:bg-red-600 transition">
        Access Panel
      </button>
    </form>
  </div>
</div>

</body>
</html>
