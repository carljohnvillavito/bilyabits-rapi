<%- include('../partials/head') %>

<div id="skeletonLoader" class="fixed inset-0 z-[100] bg-[#0a0f1a] flex flex-col items-center justify-center transition-opacity duration-500">
  <div class="w-full max-w-4xl px-6">
    <div class="flex items-center gap-3 mb-8">
      <div class="w-8 h-8 rounded-lg bg-white/10 animate-pulse"></div>
      <div class="h-5 w-32 rounded-lg bg-white/10 animate-pulse"></div>
    </div>
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
      <div class="glass rounded-2xl p-5"><div class="h-3 w-16 rounded bg-white/10 animate-pulse mb-3"></div><div class="h-7 w-10 rounded bg-white/10 animate-pulse"></div></div>
      <div class="glass rounded-2xl p-5"><div class="h-3 w-16 rounded bg-white/10 animate-pulse mb-3"></div><div class="h-7 w-10 rounded bg-white/10 animate-pulse"></div></div>
      <div class="glass rounded-2xl p-5"><div class="h-3 w-16 rounded bg-white/10 animate-pulse mb-3"></div><div class="h-7 w-10 rounded bg-white/10 animate-pulse"></div></div>
      <div class="glass rounded-2xl p-5"><div class="h-3 w-16 rounded bg-white/10 animate-pulse mb-3"></div><div class="h-7 w-10 rounded bg-white/10 animate-pulse"></div></div>
    </div>
    <div class="glass rounded-2xl p-6 mb-6">
      <div class="h-5 w-36 rounded bg-white/10 animate-pulse mb-4"></div>
      <div class="space-y-3">
        <div class="h-10 rounded bg-white/10 animate-pulse"></div>
        <div class="h-10 rounded bg-white/10 animate-pulse"></div>
        <div class="h-10 rounded bg-white/10 animate-pulse"></div>
      </div>
    </div>
  </div>
</div>
<script>window.addEventListener('load',()=>{const s=document.getElementById('skeletonLoader');s.style.opacity='0';setTimeout(()=>s.style.display='none',500)});</script>

<header class="sticky top-0 z-50 glass border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-red-500/20 rounded-lg flex items-center justify-center">
          <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
        </div>
        <span class="font-bold text-lg">Admin <span class="text-red-400">Panel</span></span>
      </div>

      <div class="hidden md:flex items-center gap-4">
        <a href="/" class="text-sm text-gray-400 hover:text-white transition">Main Site</a>
        <a href="/korekong/admin/logout" class="px-4 py-2 bg-red-500/20 text-red-400 rounded-lg text-sm hover:bg-red-500/30 transition">Logout</a>
      </div>

      <button id="mobileToggle" class="md:hidden text-gray-300 hover:text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
      </button>
    </div>
  </div>
</header>

<div id="drawerOverlay" class="fixed inset-0 bg-black/60 z-[60] hidden transition-opacity duration-300 opacity-0"></div>
<div id="sideDrawer" class="fixed top-0 left-0 h-full w-72 bg-[#0d1321] border-r border-white/10 z-[70] transform -translate-x-full transition-transform duration-300">
  <div class="flex items-center justify-between p-4 border-b border-white/10">
    <span class="font-bold text-lg">Admin <span class="text-red-400">Panel</span></span>
    <button id="drawerClose" class="p-2 text-gray-400 hover:text-white transition">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
    </button>
  </div>
  <div class="p-4 space-y-2">
    <a href="/" class="flex items-center gap-2 py-2 px-2 text-sm text-gray-300 hover:text-white hover:bg-white/5 rounded-lg transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
      Main Site
    </a>
    <a href="/korekong/admin/logout" class="flex items-center gap-2 py-2 px-2 text-sm text-red-400 hover:bg-red-500/10 rounded-lg transition">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
      Logout
    </a>
  </div>
</div>

<main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 w-full">
  <div class="mb-8">
    <h1 class="text-2xl md:text-3xl font-bold">Admin Overview</h1>
    <p class="text-gray-400 text-sm mt-1">Real-time platform statistics</p>
  </div>

  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Total Users</p>
      <p class="text-2xl font-bold text-secondary" id="adminTotalUsers"><%= stats.totalUsers %></p>
    </div>
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Total APIs</p>
      <p class="text-2xl font-bold text-accent"><%= stats.totalAPIs %></p>
    </div>
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Total API Calls</p>
      <p class="text-2xl font-bold text-light" id="adminTotalCalls"><%= stats.totalCalls %></p>
    </div>
    <div class="glass rounded-2xl p-4 md:p-6">
      <p class="text-xs text-gray-400 mb-1">Dead APIs</p>
      <p class="text-2xl font-bold text-red-400"><%= stats.deadAPIs %></p>
    </div>
  </div>

  <div class="glass rounded-2xl p-4 md:p-6 mb-8">
    <h2 class="text-lg font-bold mb-4">Registered Users</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-white/10">
            <th class="text-left py-3 px-2 text-gray-400 font-medium">Username</th>
            <th class="text-left py-3 px-2 text-gray-400 font-medium hidden sm:table-cell">Email</th>
            <th class="text-left py-3 px-2 text-gray-400 font-medium">API Calls</th>
            <th class="text-left py-3 px-2 text-gray-400 font-medium hidden md:table-cell">Joined</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(u) { %>
            <tr class="border-b border-white/5 hover:bg-white/5">
              <td class="py-3 px-2 text-secondary"><%= u.username %></td>
              <td class="py-3 px-2 text-gray-300 hidden sm:table-cell"><%= u.email %></td>
              <td class="py-3 px-2"><%= u.api_calls %></td>
              <td class="py-3 px-2 text-gray-400 hidden md:table-cell"><%= new Date(u.created_at).toLocaleDateString() %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% if (users.length === 0) { %>
      <p class="text-gray-400 text-sm text-center py-4">No users registered yet.</p>
    <% } %>
  </div>

  <div class="glass rounded-2xl p-4 md:p-6 mb-8">
    <h2 class="text-lg font-bold mb-4">Send Notification</h2>
    <div class="space-y-4">
      <div>
        <label class="block text-xs text-gray-400 mb-1">Target</label>
        <select id="notifTarget" class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white focus:outline-none focus:border-red-400 transition">
          <option value="all">All Users</option>
          <% users.forEach(function(u) { %>
            <option value="<%= u.id %>"><%= u.username %> (<%= u.email %>)</option>
          <% }); %>
        </select>
      </div>
      <div>
        <label class="block text-xs text-gray-400 mb-1">Title</label>
        <input type="text" id="notifTitle" placeholder="Notification title"
          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-red-400 transition">
      </div>
      <div>
        <label class="block text-xs text-gray-400 mb-1">Message</label>
        <textarea id="notifMessage" rows="3" placeholder="Write your message..."
          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:border-red-400 transition resize-none"></textarea>
      </div>
      <div class="flex items-center gap-3">
        <button onclick="sendNotification()" id="sendNotifBtn" class="px-6 py-3 bg-red-500 text-white font-bold rounded-xl hover:bg-red-600 transition">
          Send Notification
        </button>
        <span id="notifStatus" class="text-sm hidden"></span>
      </div>
    </div>
  </div>

  <div class="glass rounded-2xl p-4 md:p-6">
    <h2 class="text-lg font-bold mb-4">Loaded API Tools</h2>
    <% if (apis.length === 0) { %>
      <p class="text-gray-400 text-sm">No API tools loaded.</p>
    <% } else { %>
      <div class="space-y-3">
        <% apis.forEach(function(api) { %>
          <div class="bg-white/5 rounded-xl p-4 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
            <div>
              <div class="flex items-center gap-2">
                <span class="font-semibold text-sm"><%= api.name %></span>
                <span class="px-2 py-0.5 bg-secondary/20 text-secondary rounded-full text-xs"><%= api.category %></span>
                <span class="w-2 h-2 rounded-full <%= api.alive ? 'bg-green-400' : 'bg-red-400' %>"></span>
              </div>
              <code class="text-xs text-gray-400 font-mono mt-1 block">/<%= api.category.toLowerCase() %><%= api.route.toLowerCase() %></code>
            </div>
            <span class="text-xs text-gray-500"><%= api.requireKey ? 'Key Required' : 'Free Access' %></span>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</main>

<footer class="border-t border-white/10 bg-[#060a12] mt-auto">
  <div class="max-w-7xl mx-auto px-4 py-6 text-center">
    <p class="text-gray-500 text-xs">&copy; <%= new Date().getFullYear() %> BILYABITS-RAPI Admin Panel</p>
  </div>
</footer>

<script>
(function() {
  const toggle = document.getElementById('mobileToggle');
  const drawer = document.getElementById('sideDrawer');
  const overlay = document.getElementById('drawerOverlay');
  const closeBtn = document.getElementById('drawerClose');

  function openDrawer() {
    drawer.classList.remove('-translate-x-full');
    overlay.classList.remove('hidden');
    requestAnimationFrame(() => overlay.classList.remove('opacity-0'));
    document.body.style.overflow = 'hidden';
  }
  function closeDrawer() {
    drawer.classList.add('-translate-x-full');
    overlay.classList.add('opacity-0');
    setTimeout(() => overlay.classList.add('hidden'), 300);
    document.body.style.overflow = '';
  }

  toggle?.addEventListener('click', openDrawer);
  closeBtn?.addEventListener('click', closeDrawer);
  overlay?.addEventListener('click', closeDrawer);
})();

async function refreshStats() {
  try {
    const resp = await fetch('/api/admin/stats');
    if (resp.ok) {
      const data = await resp.json();
      document.getElementById('adminTotalUsers').textContent = data.totalUsers;
      document.getElementById('adminTotalCalls').textContent = data.totalCalls;
    }
  } catch(e) {}
}
setInterval(refreshStats, 5000);

async function sendNotification() {
  const target = document.getElementById('notifTarget').value;
  const title = document.getElementById('notifTitle').value.trim();
  const message = document.getElementById('notifMessage').value.trim();
  const status = document.getElementById('notifStatus');
  const btn = document.getElementById('sendNotifBtn');

  if (!title || !message) {
    status.textContent = 'Title and message are required';
    status.className = 'text-sm text-red-400';
    status.classList.remove('hidden');
    return;
  }

  btn.disabled = true;
  btn.textContent = 'Sending...';

  try {
    const resp = await fetch('/api/admin/notify', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ title, message, targetUserId: target })
    });
    const data = await resp.json();
    if (data.success) {
      status.textContent = 'Notification sent!';
      status.className = 'text-sm text-green-400';
      document.getElementById('notifTitle').value = '';
      document.getElementById('notifMessage').value = '';
    } else {
      status.textContent = data.error || 'Failed to send';
      status.className = 'text-sm text-red-400';
    }
  } catch(e) {
    status.textContent = 'Network error';
    status.className = 'text-sm text-red-400';
  }

  status.classList.remove('hidden');
  btn.disabled = false;
  btn.textContent = 'Send Notification';
  setTimeout(() => status.classList.add('hidden'), 3000);
}
</script>
</body>
</html>
