<header class="sticky top-0 z-50 glass border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center gap-3">
        <button id="mobileToggle" class="md:hidden text-gray-300 hover:text-white mr-1">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
        </button>
        <a href="/" class="flex items-center gap-2">
          <div class="w-8 h-8 bg-gradient-to-br from-secondary to-accent rounded-lg flex items-center justify-center font-bold text-primary text-sm">B</div>
          <span class="font-bold text-lg hidden sm:block">BILYABITS<span class="text-secondary">-RAPI</span></span>
        </a>
      </div>

      <nav class="hidden md:flex items-center gap-6">
        <% if (typeof categories !== 'undefined' && categories) { %>
          <% for (const [cat, apis] of Object.entries(categories)) { %>
            <div class="relative group">
              <button class="text-sm text-gray-300 hover:text-secondary transition flex items-center gap-1">
                <%= cat %>
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
              </button>
              <div class="absolute top-full left-0 mt-2 w-48 glass rounded-lg py-2 hidden group-hover:block">
                <% apis.forEach(function(a) { %>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-300 hover:text-secondary hover:bg-white/5 transition"><%= a.name %></a>
                <% }); %>
              </div>
            </div>
          <% } %>
        <% } %>
      </nav>

      <div class="flex items-center gap-3">
        <% if (typeof user !== 'undefined' && user) { %>
          <button id="notifToggle" class="relative p-2 text-gray-300 hover:text-white transition">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
            <span id="notifBadge" class="hidden absolute -top-0.5 -right-0.5 w-4 h-4 bg-red-500 text-white text-[10px] font-bold rounded-full flex items-center justify-center">0</span>
          </button>
        <% } %>

        <div class="hidden md:flex items-center gap-3">
          <% if (typeof user !== 'undefined' && user) { %>
            <a href="/user/<%= user.username %>" class="text-sm text-gray-300 hover:text-white transition"><%= user.username %></a>
            <a href="/logout" class="px-4 py-2 bg-red-500/20 text-red-400 rounded-lg text-sm hover:bg-red-500/30 transition">Logout</a>
          <% } else { %>
            <a href="/login" class="text-sm text-gray-300 hover:text-white transition">Login</a>
            <a href="/register" class="px-4 py-2 bg-secondary text-primary rounded-lg text-sm font-semibold hover:bg-secondary/80 transition">Sign Up</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</header>

<div id="drawerOverlay" class="fixed inset-0 bg-black/60 z-[60] hidden transition-opacity duration-300 opacity-0"></div>
<div id="sideDrawer" class="fixed top-0 left-0 h-full w-72 bg-[#0d1321] border-r border-white/10 z-[70] transform -translate-x-full transition-transform duration-300">
  <div class="flex items-center justify-between p-4 border-b border-white/10">
    <a href="/" class="flex items-center gap-2">
      <div class="w-8 h-8 bg-gradient-to-br from-secondary to-accent rounded-lg flex items-center justify-center font-bold text-primary text-sm">B</div>
      <span class="font-bold text-lg">BILYABITS<span class="text-secondary">-RAPI</span></span>
    </a>
    <button id="drawerClose" class="p-2 text-gray-400 hover:text-white transition">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
    </button>
  </div>

  <div class="flex-1 overflow-y-auto p-4 space-y-3">
    <% if (typeof categories !== 'undefined' && categories) { %>
      <p class="text-[10px] uppercase tracking-wider text-gray-500 font-semibold mb-2">API Categories</p>
      <% for (const [cat, apis] of Object.entries(categories)) { %>
        <div>
          <button class="drawer-dropdown-toggle w-full text-left text-sm text-gray-300 hover:text-secondary transition flex items-center justify-between py-2 px-2 rounded-lg hover:bg-white/5">
            <span class="flex items-center gap-2">
              <span class="w-2 h-2 bg-secondary rounded-full"></span>
              <%= cat %>
            </span>
            <svg class="w-3 h-3 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
          </button>
          <div class="drawer-dropdown-content hidden pl-6 space-y-1 mt-1">
            <% apis.forEach(function(a) { %>
              <a href="#" class="block py-1.5 text-sm text-gray-400 hover:text-secondary transition"><%= a.name %></a>
            <% }); %>
          </div>
        </div>
      <% } %>
    <% } %>

    <div class="border-t border-white/10 pt-4 mt-4 space-y-2">
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/user/<%= user.username %>" class="flex items-center gap-2 py-2 px-2 text-sm text-gray-300 hover:text-white hover:bg-white/5 rounded-lg transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
          Dashboard
        </a>
        <a href="/logout" class="flex items-center gap-2 py-2 px-2 text-sm text-red-400 hover:bg-red-500/10 rounded-lg transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
          Logout
        </a>
      <% } else { %>
        <a href="/login" class="flex items-center gap-2 py-2 px-2 text-sm text-gray-300 hover:text-white hover:bg-white/5 rounded-lg transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/></svg>
          Login
        </a>
        <a href="/register" class="flex items-center gap-2 py-2 px-2 text-sm text-secondary font-semibold hover:bg-secondary/10 rounded-lg transition">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/></svg>
          Sign Up
        </a>
      <% } %>
    </div>
  </div>
</div>

<% if (typeof user !== 'undefined' && user) { %>
<div id="notifPanel" class="fixed top-16 right-0 sm:right-4 w-full sm:w-96 max-h-[70vh] glass rounded-b-2xl sm:rounded-2xl z-[55] hidden border border-white/10 overflow-hidden">
  <div class="flex items-center justify-between p-4 border-b border-white/10">
    <h3 class="font-semibold text-sm">Notifications</h3>
    <button id="markAllRead" class="text-xs text-secondary hover:underline">Mark all read</button>
  </div>
  <div id="notifList" class="overflow-y-auto max-h-[55vh] p-2 space-y-2">
    <div class="text-center py-6 text-gray-500 text-sm" id="notifEmpty">No notifications</div>
  </div>
</div>
<% } %>
